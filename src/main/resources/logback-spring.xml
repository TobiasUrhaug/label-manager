<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- Console appender with simple pattern (local development) -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- JSON appender (production) -->
  <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <includeMdcKeyName>requestId</includeMdcKeyName>
      <includeMdcKeyName>userId</includeMdcKeyName>
    </encoder>
  </appender>

  <!-- Local/default profile: simple console output -->
  <springProfile name="default | local">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
    <logger name="org.omt.labelmanager" level="DEBUG"/>
  </springProfile>

  <!-- Production profile: JSON output -->
  <springProfile name="prod">
    <root level="INFO">
      <appender-ref ref="JSON"/>
    </root>
    <logger name="org.omt.labelmanager" level="INFO"/>
  </springProfile>

</configuration>
